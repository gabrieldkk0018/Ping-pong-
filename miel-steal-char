-- MH Steal Character | V1 EST√ÅVEL
-- visual only | no animation break

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- ================= UI =================
local gui = Instance.new("ScreenGui")
gui.Name = "MH_StealCharacter"
gui.ResetOnSpawn = false
gui.Parent = LocalPlayer:WaitForChild("PlayerGui")

local main = Instance.new("Frame")
main.Size = UDim2.new(0,260,0,140)
main.Position = UDim2.new(0.5,-130,0.5,-70)
main.BackgroundColor3 = Color3.fromRGB(20,20,25)
main.BorderSizePixel = 0
main.Parent = gui
main.Active = true
main.Draggable = true

local stroke = Instance.new("UIStroke", main)
stroke.Thickness = 2
stroke.Color = Color3.fromRGB(0,255,180)

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1,0,0,28)
title.BackgroundTransparency = 1
title.Text = "MH Steal Character"
title.Font = Enum.Font.GothamBold
title.TextSize = 16
title.TextColor3 = Color3.new(1,1,1)
title.Parent = main

local box = Instance.new("TextBox")
box.Size = UDim2.new(1,-20,0,32)
box.Position = UDim2.new(0,10,0,40)
box.PlaceholderText = "Type the person's nickname"
box.Text = ""
box.Font = Enum.Font.Gotham
box.TextSize = 14
box.BackgroundColor3 = Color3.fromRGB(35,35,40)
box.TextColor3 = Color3.new(1,1,1)
box.ClearTextOnFocus = false
box.Parent = main

local btn = Instance.new("TextButton")
btn.Size = UDim2.new(1,-20,0,32)
btn.Position = UDim2.new(0,10,0,80)
btn.Text = "Steal Skin"
btn.Font = Enum.Font.GothamBold
btn.TextSize = 14
btn.BackgroundColor3 = Color3.fromRGB(70,120,255)
btn.TextColor3 = Color3.new(1,1,1)
btn.Parent = main

local status = Instance.new("TextLabel")
status.Size = UDim2.new(1,-20,0,20)
status.Position = UDim2.new(0,10,1,-24)
status.BackgroundTransparency = 1
status.Text = ""
status.Font = Enum.Font.Gotham
status.TextSize = 12
status.TextColor3 = Color3.fromRGB(0,255,180)
status.Parent = main

local function setStatus(txt, ok)
	status.Text = txt
	status.TextColor3 = ok and Color3.fromRGB(0,255,180) or Color3.fromRGB(255,80,80)
end

-- ================= LOGIC =================
local function clearAccessories(char)
	for _,v in ipairs(char:GetChildren()) do
		if v:IsA("Accessory") then
			v:Destroy()
		end
	end
end

local function copyFace(fromChar, toChar)
	local fromHead = fromChar:FindFirstChild("Head")
	local toHead = toChar:FindFirstChild("Head")
	if not fromHead or not toHead then return end

	for _,d in ipairs(toHead:GetChildren()) do
		if d:IsA("Decal") then d:Destroy() end
	end

	for _,d in ipairs(fromHead:GetChildren()) do
		if d:IsA("Decal") then
			d:Clone().Parent = toHead
		end
	end
end

local function copyAccessories(fromChar, toChar)
	for _,acc in ipairs(fromChar:GetChildren()) do
		if acc:IsA("Accessory") then
			acc:Clone().Parent = toChar
		end
	end
end

btn.MouseButton1Click:Connect(function()
	local name = box.Text
	if name == "" then
		setStatus("Type a nickname first", false)
		return
	end

	local target = Players:FindFirstChild(name)
	if not target or not target.Character then
		setStatus("Player not found", false)
		return
	end

	local myChar = LocalPlayer.Character
	if not myChar then return end

	clearAccessories(myChar)
	copyAccessories(target.Character, myChar)
	copyFace(target.Character, myChar)

	setStatus("Skin applied (stable)", true)
end)

setStatus("Ready", true)
